<!-- app/views/products/show.html.erb -->
<div class="container mx-auto px-4 py-6">
  <div class="bg-white shadow rounded-lg p-6 flex flex-col md:flex-row space-y-6 md:space-y-0">
    <div class="md:w-1/3 w-full pr-6 flex justify-center items-center">
      <% if @product.images.attached? %>
        <%= image_tag url_for(@product.images.first.variant(resize_to_fill: [300, 300], quality: 100)), class: "w-full h-auto object-cover" %>
      <% else %>
        <p class="text-gray-500">No Image</p>
      <% end %>
    </div>
    <div class="md:w-2/3 w-full">
      <p class="text-sm text-blue-500 font-semibold mb-2"><%= @product.categories.first.name %></p>
      <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
      <p class="text-2xl text-gray-900 font-bold mb-4"><%= number_to_currency(@product.price) %></p>
      <% if @product.sale_price.present? && @product.sale_price != 0.0 %>
        <p class="text-red-600 font-bold text-xl mb-4">Sale Price: <%= number_to_currency(@product.sale_price) %></p>
      <% end %>
      <div class="flex items-center mb-6">
        <label for="quantity" class="mr-2 text-gray-700 font-semibold">Quantity</label>
        <select id="quantity" name="quantity" class="border rounded px-4 py-2">
          <% (1..10).each do |n| %>
            <option value="<%= n %>"><%= n %></option>
          <% end %>
        </select>
      </div>
      <div class="flex space-x-4 mb-6">
        <button class="bg-blue-500 text-white font-semibold py-2 px-4 rounded">Add to Cart</button>
        <button class="bg-yellow-400 text-black font-semibold py-2 px-4 rounded">Buy with PayPal</button>
      </div>
      <div class="mt-6">
        <h2 class="text-lg font-bold text-gray-900 mb-2">Description</h2>
        <p class="text-gray-700"><%= @product.description %></p>
      </div>
    </div>
  </div>
</div>
