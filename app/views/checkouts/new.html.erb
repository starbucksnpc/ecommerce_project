<%= form_with model: @order, url: checkouts_path, local: true do |form| %>
  <h2>Order Summary</h2>
  <ul>
    <% @cart.each do |product_id, quantity| %>
      <li>
        <% product = Product.find(product_id) %>
        <%= product.name %> - <%= quantity %> x <%= number_to_currency(product.price) %>
      </li>
    <% end %>
  </ul>

  <h3>Total Price: <%= number_to_currency(@order.total_price) %></h3>
  <h3>Total Tax: <%= number_to_currency(@order.total_tax) %></h3>
  <h3>Total with Tax: <%= number_to_currency(@order.total_with_tax) %></h3>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, value: current_user.address %>
  </div>

  <div class="field">
    <%= form.label :province_id %>
    <%= form.collection_select :province_id, Province.all, :id, :name, selected: current_user.province_id %>
  </div>

  <div class="actions">
    <%= form.submit 'Place Order' %>
  </div>
<% end %>
