<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Checkout</h1>
  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-lg font-semibold mb-4">Shipping Address</h2>
    <%= form_with model: @order, url: checkout_path, method: :post, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :address, class: "block text-gray-700" %>
        <%= f.text_field :address, value: current_user.address, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="mb-4">
        <%= f.label :province_id, "Province", class: "block text-gray-700" %>
        <%= f.collection_select :province_id, Province.all, :id, :name, selected: current_user.province_id, include_blank: "Select Province", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <h2 class="text-lg font-semibold mb-4">Order Summary</h2>
      <ul class="mb-4">
        <% @cart.each do |product_id, quantity| %>
          <% product = Product.find(product_id) %>
          <li class="mb-2">
            <%= product.name %> x <%= quantity %> - <%= number_to_currency(product.price * quantity) %>
          </li>
        <% end %>
      </ul>
      <div class="mb-4">
        <%= f.submit "Place Order", class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
